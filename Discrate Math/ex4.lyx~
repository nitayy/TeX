\begin_layout Definition
\begin_inset Formula 
\[
A_{1}\vee A_{2}\vee\cdots\vee A_{m}
\]

\end_inset


\end_layout

\begin_layout Definition
כאשר 
\begin_inset Formula $m\in\mathbb{N}$
\end_inset

.
\end_layout

\begin_layout Definition
ולכל 
\begin_inset Formula $i$
\end_inset

:
\end_layout

\begin_layout Definition
\begin_inset Formula 
\[
A_{i}=\left(P_{1}\wedge P_{2}\wedge\cdots\wedge P_{k}\right)
\]

\end_inset


\end_layout

\begin_layout Definition
כאשר כל 
\begin_inset Formula $P_{j}$
\end_inset

 הוא משתנה 
\begin_inset Formula $x_{k}$
\end_inset

 כלשהו או שלילתו 
\begin_inset Formula $\left(\neg x_{k}\text{ או }\overline{x}_{k}\right)$
\end_inset

 .
\end_layout

